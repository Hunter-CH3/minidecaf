{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitUseStrict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6",
    "allowJs": true,
    "strict": false,
  },
  "include": [
    "src",
    "package.json",
  ],
  "exclude": [
    "node_modules",
  ]
}
