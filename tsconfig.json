{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitUseStrict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "allowJs": true,
    "strict": false,
  },
  "include": [
    "src",
    "package.json",
  ],
  "exclude": [
    "node_modules",
  ]
}
